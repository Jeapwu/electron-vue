{
  "name": "electron-vue",
  "productName": "electron-vue",
  "description": "electron vue starter",
  "version": "2.0.0",
  "author": "electron-vue",
  "type": "commonjs",
  "main": "src/main/main.js",
  "private": true,
  "license": "MIT",
  "homepage": "https://www.baidu.com",
  "repository": "https://github.com/Jeapwu/electron-vue.git",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron:start": "vite build && electron .",
    "electron:build": "vite build && electron-builder",
    "electron:publish": "set GH_TOKEN=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 && electron-builder --publish always"
  },
  "build": {
    "appId": "com.electron.vue",
    "productName": "electron-vue",
    "files": [
      "dist/**/*",
      "!dist/win-unpacked/*",
      "src/main/**/*"
    ],
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-v${version}-${os}-${arch}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "electron-vue",
      "warningsAsErrors": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Jeapwu",
        "repo": "electron-vue",
        "releaseType": "release"
      }
    ],
    "extends": null,
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "electron-updater": "^6.3.9",
    "element-plus": "^2.9.1",
    "pinia": "^2.3.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-vue-components": "^0.28.0",
    "vite": "^6.0.1"
  }
}
